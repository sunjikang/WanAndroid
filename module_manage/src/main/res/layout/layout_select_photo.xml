<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_blue"
        android:text="图片选择"
        android:textColor="@color/white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button6"
        android:layout_width="98dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_bg_green"
        android:text="保存"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_result1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/iv_result2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"></ImageView>

    <ImageView
        android:id="@+id/iv_result4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/iv_result5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_result1"></ImageView>

    <ImageView
        android:id="@+id/iv_result7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/iv_result8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_result4"></ImageView>

    <ImageView
        android:id="@+id/iv_result2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_result1"></ImageView>

    <ImageView
        android:id="@+id/iv_result5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_result4"></ImageView>

    <ImageView
        android:id="@+id/iv_result8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_result7"></ImageView>

    <ImageView
        android:id="@+id/iv_result3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_result2"
        app:layout_constraintTop_toTopOf="@+id/iv_result1"></ImageView>

    <ImageView
        android:id="@+id/iv_result6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_result2"
        app:layout_constraintTop_toTopOf="@+id/iv_result5"></ImageView>

    <ImageView
        android:id="@+id/iv_result9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_bg_orange"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_result2"
        app:layout_constraintTop_toTopOf="@+id/iv_result8"></ImageView>
</android.support.constraint.ConstraintLayout>